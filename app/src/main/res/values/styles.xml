<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/colorText</item>
        <item name="colorPrimary">@color/colorAppBarTheme</item>
        <item name="android:actionBarItemBackground">@color/colorAppBarTheme</item>
        <item name="fontFamily">@font/mulishregular</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#00000000</item>
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="AppTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.StatusBar.Title">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="livecolorButton">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:backgroundTint">#BA0414</item>
        <item name="android:text">Live</item>
        <item name="android:drawableLeft">@drawable/ic_baseline_adjust_24</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>

    </style>

    <style name="upcomingcolorButton">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:backgroundTint">#6C6C6C</item>
        <item name="android:text"> Upcoming</item>
        <item name="android:drawableLeft">@drawable/ic_baseline_table_chart_24</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>

    </style>

    <style name="replaycolorButton">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:backgroundTint">#f9ad6d</item>
        <item name="android:text"> Replay</item>
        <item name="android:drawableLeft">@drawable/ic_baseline_play_arrow_24</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>

    </style>

</resources>